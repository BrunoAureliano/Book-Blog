<a href="/user/addpostagem">
    <button class="btn btn-success">Nova Postagem</button>
</a>

<h2>Postagens Recentes</h2>
{{#each livro}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{nome}}</h3>
            <h6>Autor: {{autor}}</h6>
            <a href="/user/{{slug}}">
                <button class="btn btn-success">Ler Mais</button>
            </a>
            <br>
            <small>Criada em: {{publicado}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
        </div>
    </div>
{{else}}
    <h5>Sem postagens</h5>
{{/each}}