<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/user/addpostagem/new" method="post">
        <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do livro" class="form-control">
        <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug do livro" class="form-control">
        <label for="autor">Autor: </label>
            <input type="text" id="autor" name="autor" placeholder="Autor do livro" class="form-control">
        <label for="resenha">Escreva aqui sua resenha: </label> 
            <textarea name="resenha" id="resenha" class="form-control"></textarea>
        <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Sem categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success">Criar Resenha</button>
        </form>
    </div>
</div>