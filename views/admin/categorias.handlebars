<h2>List of Categories: </h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success">Adicionar nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success mt-3">Editar Categoria</button>
            </a>
            <form action="/admin/categorias/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">No categories</h4>
{{/each}}