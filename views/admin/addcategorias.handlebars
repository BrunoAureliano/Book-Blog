<body class="bg-light">
    <div class="d-flex flex-column align-items-center justify-content-start min-vh-100 px-3 py-4 overflow-auto">
        <div class="w-100" style="max-width: 500px;">
            {{#each erros}}
                <div class="alert alert-danger w-100">{{text}}</div>
            {{/each}}

            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">Nova Categoria</h3>

                    <form action="/admin/categorias/new" method="post">
                        <div class="form-group mb-3">
                            <label for="nome" class="form-label">Nome</label>
                            <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" required>
                        </div>

                        <div class="form-group mb-4">
                            <label for="slug" class="form-label">Slug</label>
                            <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Criar Categoria</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>